
@{
    ViewBag.Title = "CreateParty";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
@model SuperSurvey.Models.PartyModels
<script>

    $(".menu2").removeClass("active").removeClass("toggled");
    $(".menu1").addClass("active").addClass("toggled");

</script>
@using (Html.BeginForm("CreateParty", "App",FormMethod.Post, new { enctype = "multipart/form-data"  }))

{
    <div class="panel panel-success">
        <div class="panel-heading">
            <strong>@Model.PanelTitle</strong>
        </div>
        <div class="panel-body">
            @Html.ValidationSummary()
            @Html.HiddenFor(m => m.Type_ID)
            @Html.HiddenFor(m=>m.Party_ID)
            @Html.HiddenFor(m => m.ORG_ID)
            @Html.HiddenFor(m=>m.Submit_Text)
            @Html.HiddenFor(m=>m.IconsPath)
            <div class="pmbb-edit" id="conedit">
                <dl class="dl-horizontal">

                    <dt class="p-t-10">Code</dt>
                    <dd>
                        <div class="fg-line">
                            @Html.TextBoxFor(m => m.Code, new { @class = "form-control" , @onkeypress = "return isNumber(event)", @maxlength = "6" })

                        </div>
                    </dd>
                    <dt class="p-t-10">Name</dt>
                    <dd>
                        <div class="fg-line">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @onkeypress = "return onlyAlphabets(event)" })

                        </div>
                    </dd>
                    <dt class="p-t-10">Short Name</dt>
                    <dd>
                        <div class="fg-line">
                            @Html.TextBoxFor(m => m.Short_Name, new { @class = "form-control", @onkeypress = "return onlyAlphabets(event)" })
                        </div>
                    </dd>
                    <dt class="p-t-10">Regional Language</dt>
                    <dd>
                        <div class="fg-line">
                            @Html.TextBoxFor(m => m.Hindi_Name, new { @class = "form-control" })
                        </div>
                    </dd>
                    <dt class="p-t-10">Image Path</dt>
                    <dd>
                        <div class="fg-line">
                            @Html.TextBoxFor(m => m.IconsPath, new { @class = "form-control",@type="file" })
                        </div>
                    </dd>
                </dl>

                <button type="submit" class="btn btn-primary btn-block" value="@Model.Submit_Text" >@Model.Submit_Text</button>

            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}