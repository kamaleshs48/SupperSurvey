
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    int Index = 1;
}

@model SuperSurvey.Models.NameCountModels
<div class="panel panel-success">
    <div class="panel-heading">
        <strong>Survey Report</strong>
    </div>
    <div class="panel-body">
        <div class="row">
            <table class="table table-bordered">
                <tr>
                    <th>SR.N.</th>
                    <th>Survey Name</th>
                    <th>Total Count</th>

                </tr>

                @foreach (var l in Model._List)
                {
                    <tr>
                        <td>@Index</td>
                        <td>@l.Name</td>
                        <td>
                            <a href="@Url.Action("PartyWise", "Report", new { @id = l.ID, @PName = l.Name })">@l.Count</a>
                        </td>
                    </tr>
                    Index += 1;
                }
            </table>
        </div>
    </div>
    <div class="panel-footer">
        <br />
    </div>
</div>
